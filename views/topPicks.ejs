<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Our Top Picks</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="/css/topPicks.css">
    <link rel="stylesheet" href="/css/navbarFooter.css">
    <link rel="stylesheet" href="/css/movieCard.css">

    <!-- GOOGLE FONTS -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant:ital,wght@0,300..700;1,300..700&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Rubik+Glitch+Pop&family=Sora:wght@100..800&family=Staatliches&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/c215bcf085.js" crossorigin="anonymous"></script>

</head>
<body>
    <%- include('partials/navbar.ejs') %>

    <div class="container1">
        <div class="search-bar">
            <h5>Search More Movies </h5>
            <form action="/topPicks" method="POST">
                <input type="text" name="query" autocomplete="off" placeholder="Under the Silver Lake" required>
                <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
            </form>
        </div>
    </div>

    <h1 class="top-movies-heading">Top 20 Movies of All Time</h1>
    <div class="main">
        <% movies.forEach(movie => { %>
            <a class="imdb-link" href="https://www.imdb.com/title/<%= movie.imdbid %>/">
                <div onmouseenter="hoverIn(this)" onmouseleave="hoverOut(this)" class="card text-white bg-dark mb-3" style="width: 18rem;">
                    <img class="card-img-top" src="<%= movie.poster %>" alt="Card image cap">
                    <div class="card-body">
                      <h5 class="card-title"><%= movie.title %></h5>
                      <h5 class="content-rating"><%= movie.rated %></h5>
                      <p class="card-text"><%= movie.description.split(" ").slice(0, 15).join(" ") %>...</p>
                      <p class="card-text director">~ By <%= movie.director %></p>
                      <div class="genres">
                        <% if (movie.genres) { %>
                          <% movie.genres.split(",").forEach(genre => { %>
                            <h5><span class="genre-badge"><%= genre.trim() %></span></h5>
                          <% }) %>
                        <% } %>
                      </div>

                      <p class="movie-rating">üçø<img src="/images/IMDb logo.png" class="imdb-logo" alt=""> <%= movie.rating %></p>
                    </div>
                </div>
            </a>
        <% }); %>
    </div>

    <%- include('partials/footer.ejs') %>

    <script src="/navbar.js"></script>
    <script src="/cards.js"></script>
</body>
</html>